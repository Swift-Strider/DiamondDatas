{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "phpstan",
      "type": "shell",
      "command": "./vendor/bin/phpstan analyze src",
      "group": "build"
    },
    {
        "label": "php-cs-fixer",
        "type": "shell",
        "command": "./vendor/bin/php-cs-fixer fix src",
        "group": "build"
    }
  ]
}
